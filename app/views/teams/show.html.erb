<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Topic name:</strong>
  <%= @team.topic_name %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @team.rating %>
</p>


<table>
  <thead>
    <tr>
      <th>Player Name</th>
      <th>college name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.college_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>No of players: <%= @team.players.count%></p>

<%= link_to 'Add players', new_team_player_path(@team) %> |
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
