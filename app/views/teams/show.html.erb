<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Application name:</strong>
  <%= @team.topic_name %>
</p>

<p>
  <strong>Progress:</strong>
  <%= @team.rating %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>College Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Member.where(team_id: @team.id).each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.college %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Member', "/members/new?team_id=#{@team.id}" %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
